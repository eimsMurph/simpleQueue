{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/W4",                     // Enable level 4 warnings
                "/WX",                     // Treat warnings as errors
                "/Zi",                     // Generate debugging information
                "/EHsc",                   // Enable C++ exceptions (safe)
                "/nologo",                 // Suppress the logo message
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe", // Output file
                "${file}"                  // Source file
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
